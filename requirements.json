{
  "project": "OrangeHRM Enhanced Test Automation - Option 2 Testing",
  "version": "2.0.0",
  "description": "Comprehensive testing with validations, test_data, and environment configuration",
  "url": "https://opensource-demo.orangehrmlive.com/web/index.php/auth/login",
  "test_requirements": [
    {
      "id": "REQ-001",
      "name": "Enhanced Login Functionality",
      "priority": "High",
      "test_cases": [
        {
          "id": "TC-001",
          "name": "Valid Login with Comprehensive Validations",
          "description": "Test login with valid credentials and verify all expected elements",
          "steps": [
            "Navigate to login page",
            "Enter valid username",
            "Enter valid password",
            "Click login button",
            "Click user name",
            "Verify logout option available",
            "Click outside the user name"
          ],
          "validations": [
            "Verify URL contains '/dashboard'",
            "Verify Time at Work widget loaded",
            "Verify My Actions widget loaded",
            "Verify Quick Launch widget loaded",
            "Verify Buzz Latest Posts widget loaded"
          ],
          "test_data": {
            "valid_username": "Admin",
            "valid_password": "admin123"
          },
          "environment": {
            "browser": "chrome",
            "viewport_size": "desktop",
            "headless": true
          },
          "expected_result": "User should be logged in and redirected to dashboard with all navigation elements visible",
          "priority": "Critical"
        },
        {
          "id": "TC-002",
          "name": "Invalid Login with Error Validation",
          "description": "Test login with invalid credentials and verify error handling",
          "steps": [
            "Navigate to login page",
            "Enter invalid username",
            "Enter invalid password",
            "Click login button"
          ],
          "validations": [
            "Verify error message displayed",
            "Verify URL contains '/login'",
            "Verify user remains on login page"
          ],
          "test_data": {
            "invalid_username": "InvalidUser",
            "invalid_password": "WrongPassword123"
          },
          "environment": {
            "browser": "chrome",
            "viewport_size": "desktop",
            "headless": true
          },
          "expected_result": "Error message should be displayed and user remains on login page",
          "priority": "High"
        },
        {
          "id": "TC-003",
          "name": "Empty Credentials Validation",
          "description": "Test login with empty credentials and verify validation messages",
          "steps": [
            "Navigate to login page",
            "Leave username empty",
            "Leave password empty",
            "Click login button"
          ],
          "validations": [
            "Verify validation messages displayed",
            "Verify required field errors shown",
            "Verify URL contains '/login'"
          ],
          "test_data": {
            "empty_username": "",
            "empty_password": ""
          },
          "environment": {
            "browser": "chrome",
            "viewport_size": "tablet",
            "headless": true
          },
          "expected_result": "Validation messages should be displayed for required fields",
          "priority": "Medium"
        }
      ]
    },
    {
      "id": "REQ-002",
      "name": "Enhanced Navigation Testing",
      "priority": "Medium",
      "test_cases": [
        {
          "id": "TC-004",
          "name": "Dashboard Navigation with Comprehensive Validations",
          "description": "Test complete navigation through dashboard with detailed validation of all menu items and their functionality",
          "steps": [
            "Login with valid credentials",
            "Verify dashboard loads successfully",
            "Verify main navigation menu is visible",
            "Click Admin menu item",
            "Verify Admin page loads",
            "Verify Admin page URL and content",
            "Click PIM menu item", 
            "Verify PIM page loads",
            "Verify PIM page URL and content",
            "Click Leave menu item",
            "Verify Leave page loads", 
            "Verify Leave page URL and content",
            "Click Time menu item",
            "Verify Time page loads",
            "Verify Time page URL and content",
            "Click Recruitment menu item",
            "Verify Recruitment page loads",
            "Verify Recruitment page URL and content",
            "Click My Info menu item",
            "Verify My Info page loads",
            "Verify My Info page URL and content",
            "Click Performance menu item",
            "Verify Performance page loads",
            "Verify Performance page URL and content",
            "Click Dashboard menu item",
            "Verify return to dashboard",
            "Click user name",
            "Verify user dropdown appears",
            "Verify About option visible",
            "Verify Support option visible", 
            "Verify Change Password option visible",
            "Verify Logout option visible"
          ],
          "validations": [
            "Verify URL contains '/dashboard' after login",
            "Verify page title contains 'OrangeHRM'",
            "Verify main navigation menu visible",
            "Verify all navigation items are clickable",
            "Verify Admin URL contains '/admin'",
            "Verify PIM URL contains '/pim'", 
            "Verify Leave URL contains '/leave'",
            "Verify Time URL contains '/time'",
            "Verify Recruitment URL contains '/recruitment'",
            "Verify My Info URL contains '/myinfo'",
            "Verify Performance URL contains '/performance'",
            "Verify dashboard breadcrumb navigation",
            "Verify user dropdown functionality",
            "Verify all dropdown options are accessible",
            "Verify page headers load correctly for each section",
            "Verify no broken navigation links",
            "Verify responsive navigation behavior"
          ],
          "test_data": {
            "valid_username": "Admin",
            "valid_password": "admin123",
            "expected_navigation_items": [
              "Admin", "PIM", "Leave", "Time", "Recruitment", "My Info", "Performance", "Dashboard"
            ],
            "expected_user_dropdown_items": [
              "About", "Support", "Change Password", "Logout"
            ]
          },
          "environment": {
            "browser": "chrome",
            "viewport_size": "desktop",
            "headless": true
          },
          "expected_result": "All navigation items should be functional, load correct pages, and display proper content with working user dropdown menu",
          "priority": "High"
        },
        {
          "id": "TC-005",
          "name": "Logout with Redirect Validation",
          "description": "Test logout functionality with redirect verification",
          "steps": [
            "Login with valid credentials",
            "Click on user dropdown",
            "Click logout option",
            "Verify redirect to login page"
          ],
          "validations": [
            "Verify redirect to login page",
            "Verify URL contains '/login'",
            "Verify login form visible"
          ],
          "test_data": {
            "valid_username": "Admin",
            "valid_password": "admin123"
          },
          "environment": {
            "browser": "chrome",
            "viewport_size": "desktop",
            "headless": true
          },
          "expected_result": "User should be logged out and redirected to login page",
          "priority": "High"
        }
      ]
    }
  ],
  "test_environment": {
    "browsers": ["Chrome", "Firefox"],
    "viewport_sizes": ["Desktop", "Tablet", "Mobile"],
    "test_data": {
      "valid_username": "Admin",
      "valid_password": "admin123",
      "invalid_username": "InvalidUser",
      "invalid_password": "WrongPassword123",
      "base_url": "https://opensource-demo.orangehrmlive.com"
    },
    "timeouts": {
      "page_load": 30000,
      "element_wait": 10000,
      "action_delay": 500
    },
    "screenshots": {
      "on_failure": true,
      "on_success": true,
      "directory": "test_results"
    }
  },
  "framework_options": {
    "use_page_objects": true,
    "page_object_pattern": "standard",
    "locator_strategy": "page_object",
    "test_generation_approach": "application_agnostic",
    "description": "Framework configuration options for test generation approach",
    "options": {
      "use_page_objects": {
        "description": "Enable page object pattern in generated tests",
        "default": false,
        "values": [true, false]
      },
      "page_object_pattern": {
        "description": "Type of page object pattern to use",
        "default": "standard",
        "values": ["standard", "fluent", "factory"]
      },
      "locator_strategy": {
        "description": "Element location strategy",
        "default": "direct",
        "values": ["direct", "page_object", "hybrid"]
      },
      "test_generation_approach": {
        "description": "Overall test generation approach",
        "default": "application_agnostic",
        "values": ["application_agnostic", "application_specific"]
      }
    }
  }
}

